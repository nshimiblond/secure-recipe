<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/roundedcorner"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/titleoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="My title" />



    <TextView
        android:id="@+id/descriptionoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleoutput"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="My long discription" />


    <TextView
        android:id="@+id/timeoutput"
        android:layout_width="match_parent"
        android:layout_marginTop="-80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageoutput"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="12dp"
        tools:text="My long discription" />

    <ImageView
        android:id="@+id/imageoutput"
        android:layout_width="1000dp"
        android:layout_marginTop="-70dp"
        android:layout_height="500dp"
        android:layout_below="@id/descriptionoutput"
        android:src="@drawable/rice"/>

</RelativeLayout>